<h2><%= @bookmark.topic.title %></h2>
<div class="row">
  <div class="col-md-6">
    <div class="btn btn-link"><%= @bookmark.url %></div>
    <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
    <%= link_to "Edit Bookmark", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-success' %>
  </div>
</div>
