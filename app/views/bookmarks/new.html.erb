<h2><%= @bookmark.topic.title %></h2>
<%= form_for [@topic, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control', placeholder: "Enter a new url" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Bookmark", class: 'btn btn-success pull-right' %>
  </div>
<% end %>
